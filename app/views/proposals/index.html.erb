<div class="container">
  
  <h1>Trouvez votre coup de pouce!</h1>

  <div class="text-center">
    <% @categories.each do |cat|  %>
      <%= link_to cat.name, proposals_path(:cat => cat.id), class: "btn btn-primary #{params[:cat].to_i == cat.id ? "active" : ""}" %>

    <% end %>

    <%= link_to "Annuler le filtre", proposals_path, {class: "btn btn-primary ml-5", id: "btn-reset"} %>
  </div>


  <div class="row">

    <% @proposals.each do |proposal| %>
      <div class="col-3 m-4">

        <div class="card-index">
          <%= image_tag proposal.secondary_category.image, alt:"image catégorie" %>
          <div class="card-index-secondary-category">
            <p>
            <%= proposal.primary_category.name%> -
            <%= proposal.secondary_category.name%>
            </p>
          </div>
          <div class="card-index-name">
            <%= proposal.name%>
          </div>
          <div class="card-index-description">
            <%= proposal.description%>
          </div>
          <!-- <div class="button btn-index-card">Réservez</div> -->
          <a class="button btn-index-card" href="/proposals">Réservez</a>
        </div>
      </div>
    <% end %>
  </div>
</div>


