<div class="title-wrapper">
  <div class="container">
    <h1 class="title">Mes r√©servations</h1>
  </div>
</div>

<div class="container">

  <div>
    <% @bookings.each do |booking| %>
    <div>
      <%= booking.proposal.name %> - avec <%= booking.proposal.proposer.email %>
      <i><%= booking.proposal.start_time %></i> sur
      <a class="btn" href= <%= booking.url_room %> ><i> mon lien Zoom ici </i></a>
    </div>
    <br>
    <% end %>
  </div>

  <h2>Mes proposals</h2>

  <div>
    <% @proposals.each do |proposal| %>
      <div>
        <%= proposal.name%>
        <% if policy(proposal).edit? %>
          - <%= link_to "Update", edit_proposal_path(proposal), class:"btn" %>
        <% end %>
        <% if policy(proposal).destroy? %>
          - <%= link_to "Delete", proposal_path(proposal), method: :delete, data: { confirm: 'Etes vous sur de vouloir supprimer votre proposition?' }, class:"btn" %>
        <% end %>
      </div>
    <% end %>
  </div>

</div>

