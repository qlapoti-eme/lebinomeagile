<div class="title-wrapper">
  <div class="container">
    <h1 class="title">Mon activité</h1>
  </div>
</div>

<div class="container">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Mes réservations</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Mon propositions de coups de pouces</a>
    </li>
  </ul>

  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
      <div class="row">
        <% @bookings.each do |booking| %>
          <div class="col-3 m-4">
            <div class="card-dashboard-bookings">
              <%= image_tag booking.proposal.secondary_category.image, alt:"image catégorie" %>
              <div class="card-dashboard-bookings-categories">
                <p>
                <%= booking.proposal.primary_category.name%>
                <%= booking.proposal.secondary_category.name%>
                </p>
              </div>
              <div class="card-dashboard-bookings-name">
                <b><%= booking.proposal.name %></b><br>
                <p id="date-time"> <i> Lundi 23 Juin à 18h </i> <br><p>
                Avec <i><%= booking.proposer.email %></i> -
                <a href= <%= booking.url_room %> > Zoom </a>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
      <div class="row">
        <% @proposals.each do |proposal| %>
          <div class="col-3 m-4">
            <div class="card-dashboard-proposals">
              <%= image_tag proposal.secondary_category.image, alt:"image catégorie" %>
              <div class="card-dashboard-proposals-secondary-category">
                <p>
                <%= proposal.primary_category.name%> -
                <%= proposal.secondary_category.name%>
                </p>
              </div>
              <div class="card-dashboard-proposals-name">
                <b> <%= proposal.name%> </b>
              </div>
              <div class="card-delete-update-dashboard">
                <% if policy(proposal).destroy? %>
                  <i class="far fa-trash-alt"></i>
                  <%= link_to "Supprimer", proposal_path(proposal), method: :delete, data: { confirm: 'Etes vous sur de vouloir supprimer votre proposition?' },class: "btn" %>
                <% end %>
                <% if policy(proposal).edit? %>
                  <%= link_to "Modifier", edit_proposal_path(proposal), class: "btn" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
    </div>
  </div>
</div>
