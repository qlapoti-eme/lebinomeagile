<% if policy(Proposal).create? %>
  <%= link_to "Nouvelle proposition", new_proposal_path %>
<% end %>

  <%= simple_form_for @proposal do |c| %>
    <%= c.input :name %>
    <%= c.input :start_time %>
    <%= c.input :end_time %>
    <%= c.input :description %>
    <%= c.button :submit, class: 'btn btn-primary' %>

  <% end %>
